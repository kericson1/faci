{% extends "base.html.twig" %} {% block body %}
<div class="container-fluid">
        <div class="row">
        {% for article in articles %}
        <div class="card col-md-4 mb-3 ">
            <img src=" {{ vich_uploader_asset(article,'imageFile')| imagine_filter('activites_home')}} " alt="" class="card-img-top">
            <div class="card-body">
              <h5 class="card-title">{{article.titre}}</h5>
              <p class="card-text">{{ article.contenu |raw |striptags | u.truncate(50,'...')}}</p>
              <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
          </div>
        {% endfor %}
            
        </div>   
        </div>
{% endblock %}